@page "{id:int}"
@model Factory.Razor.Pages.Categories.EditModel

<h1 class="text-center">Category "@Model.CategoryModel.Name"</h1>

<hr />

<form method="post">
    <input asp-for="CategoryModel.Id" hidden />
    <div class="row mb-2">
        <label for="@Model.CategoryModel.Name" class="col-sm-2 col-form-label">Category Name</label>
        <div class="col col-sm-10">
            <input type="text" asp-for="CategoryModel.Name" />
            <span asp-validation-for="CategoryModel.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-2">
        <label for="@Model.CategoryModel.Description" class="col-sm-2 col-form-label">Category Description</label>
        <div class="col col-sm-10">
            <textarea asp-for="CategoryModel.Description"></textarea>
        </div>
    </div>

    <div class="form-group mt-4">
        <button asp-page-handler="Edit" type="submit" class="btn btn-success mb-2 mt-2">Save Changes</button>
        <button asp-page-handler="Delete" type="submit" class="btn btn-danger mb-2 mt-2 m-lg-2" onclick="return confirm('Are you sure you want to delete this Category?')">Delete</button>
    </div>
</form>
