@page "/categories"

<PageTitle>Categories</PageTitle>

<h1 class="text-center">Categories</h1>

<div class="text-end">
    <button type="button" class="btn btn-primary text-end" @onclick="NavigateToCreatePage">
        Create New
    </button>
</div>

@if (CategoriesCollection == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <SearchBar SearchTextChanged="OnSearchAsync" />
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in CategoriesCollection.DataList)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <button type="button" class="btn btn-primary" @onclick="(() => NavigateToEditPage(category.Id))">
                                Edit
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row">
        <div class="col-md-6">
            <PaginationComponent PaginationType="CategoriesCollection" PageNumberChanged="OnPageChangedAsync" PageSizeChanged="OnPageSizeChangedAsync" />
        </div>
    </div>
}